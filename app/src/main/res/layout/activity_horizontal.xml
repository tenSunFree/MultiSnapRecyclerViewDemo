<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cbd6ca"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="韓國 電視劇"
                android:textColor="#5c3d46"
                android:textStyle="bold"
                android:textSize="18sp" />

            <View
                android:background="#e05c868d"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/first_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#e099bfaa"
                app:msrv_gravity="start"
                app:msrv_snap_count="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="美國 電視劇"
                android:textColor="#5c3d46"
                android:textStyle="bold"
                android:textSize="18sp" />

            <View
                android:background="#e05c868d"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/second_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#e099bfaa"
                android:orientation="horizontal"
                app:msrv_gravity="start"
                app:msrv_snap_count="2" />

            <TextView
                android:id="@+id/item_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="日本 電視劇"
                android:textColor="#5c3d46"
                android:textStyle="bold"
                android:textSize="18sp" />

            <View
                android:background="#e05c868d"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/third_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#e099bfaa"
                android:orientation="horizontal"
                app:msrv_gravity="start"
                app:msrv_snap_count="1" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>